{%  set config = get_config() %}
{% if pagination.getRecords|length > 0 %}
    <div class="box">
        <div class="box-body">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>{% trans %}Monto{% endtrans %}</th>
                    <th>{% trans %}Intervalo de Cobro{% endtrans %}</th>
                    <th>{% trans %}Duraci√≥n{% endtrans %}</th>
                    <th>{% trans %}Fecha inicio{% endtrans %}</th>
                    <th>{% trans %}Saldo{% endtrans %}</th>
                    <th class="text-center">{% trans %}Estado{% endtrans %}</th>
                    <th class="text-center">{% trans %}Acciones{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for record in pagination.getRecords %}
                    <tr>
                        <td width="10%">{{ record.monto + record.interes|currency }}</td>
                        <td width="10%">{{ config.tipo_intervalo[record.tipo_intervalo] }}</td>
                        <td width="10%">{{ record.intervalo }}</td>
                        <td width="10%">{{ record.fecha_inicio|date(config.formato_fecha_corta) }}</td>
                        <td width="10%">{{ record.saldo }}</td>
                        <td width="10%">{{ config.estado_prestamo[record.estado] }}</td>
                        <td align="center">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-default selected-option" data-object="{{ record|json_encode() }}">{% trans %}Seleccionar{% endtrans %}</button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                <tr></tr>
                </tbody>
            </table>
        </div>
        {% if pagination.getRecords|length > 0 and pagination.getPaginas > 1 %}
        <div class="box-footer">
            {% include 'pagination.html.twig' with {'id': 'paginatioPrestamo'} %}
        </div>
        {% endif %}
    </div>
{% else %}
    <div class="alert alert-warning" role="alert">
        {% trans %}<strong>Advertencia!</strong> No hay registros disponibles.{% endtrans %}
    </div>
{% endif %}