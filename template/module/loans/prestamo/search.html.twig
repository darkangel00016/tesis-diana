{%  set config = get_config() %}
<div class="panel panel-info">
    <div class="panel-heading" style="cursor:pointer;" id="prestamoSearchToogle">{% trans %}Cuadro de b√∫squeda{% endtrans %}<i class="fa fa-search pull-right">&nbsp;</i></div>
    <div class="panel-body" style="display: none">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="inputClienteSearch" class="col-sm-2 control-label">{% trans %}Cliente{% endtrans %}</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputClienteSearch" name="inputClienteSearch" placeholder="{% trans %}Cliente{% endtrans %}">
                </div>
            </div>
            <div class="form-group">
                <label for="inputTipoIntervalosearch" class="col-sm-2 control-label">{% trans %}Intervalo de Cobro{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control select2" id="inputTipoIntervalosearch" name="inputTipoIntervalosearch" style="width: 100%" multiple>
                        <option value=""></option>
                        {% for key, tipo in config.tipo_intervalo %}
                            <option value="{{ key }}">{{ tipo }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="inputUsuarioSearch" class="col-sm-2 control-label">{% trans %}Usuario{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control select2" id="inputUsuarioSearch" name="inputUsuarioSearch" style="width: 100%" multiple>
                        <option value=""></option>
                        {% for key, usuario in usuarios %}
                            <option value="{{ usuario.id }}">{{ usuario.nombre }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{% trans %}Fecha Inicio{% endtrans %}</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control datepicker" id="inputFechaInicioStartSearch" name="inputFechaInicioStartSearch"  readonly/>
                </div>
                <div class="col-sm-5">
                    <input type="text" class="form-control datepicker" id="inputFechaInicioEndSearch" name="inputFechaInicioEndSearch" readonly />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{% trans %}Fecha Fin{% endtrans %}</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control datepicker" id="inputFechaFinStartSearch" name="inputFechaFinStartSearch"  readonly/>
                </div>
                <div class="col-sm-5">
                    <input type="text" class="form-control datepicker" id="inputFechaFinEndSearch" name="inputFechaFinEndSearch" readonly />
                </div>
            </div>
            <div class="form-group">
                <label for="inputEstadosearch" class="col-sm-2 control-label">{% trans %}Estado{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control select2" id="inputEstadosearch" name="inputEstadosearch" style="width: 100%" multiple>
                        <option value=""></option>
                        {% for key, estado in config.estado_prestamo %}
                            <option value="{{ key }}">{{ estado }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer text-center" style="display: none">
        <button type="button" class="btn btn-primary" onclick="prestamo.listado()">{% trans %}Buscar{% endtrans %}</button>
    </div>
</div>