{%  set config = get_config() %}
<div class="panel panel-info">
    <div class="panel-heading" style="cursor:pointer;" id="pagoSearchToogle">{% trans %}Cuadro de b√∫squeda{% endtrans %}<i class="fa fa-search pull-right">&nbsp;</i></div>
    <div class="panel-body" style="display: none">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="inputClienteSearch" class="col-sm-2 control-label">{% trans %}Cliente{% endtrans %}</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputClienteSearch" name="inputClienteSearch" placeholder="{% trans %}Cliente{% endtrans %}">
                </div>
            </div>
            <div class="form-group">
                <label for="inputCobradorSearch" class="col-sm-2 control-label">{% trans %}Cobrador{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control select2" id="inputCobradorSearch" name="inputCobradorSearch" style="width: 100%" multiple>
                        <option value=""></option>
                        {% for key, usuario in usuarios %}
                            <option value="{{ usuario.id }}">{{ usuario.nombre }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{% trans %}Fecha{% endtrans %}</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control datepicker" id="inputFechaStartSearch" name="inputFechaStartSearch"  readonly/>
                </div>
                <div class="col-sm-5">
                    <input type="text" class="form-control datepicker" id="inputFechaEndSearch" name="inputFechaEndSearch" readonly />
                </div>
            </div>
            <div class="form-group">
                <label for="inputEstadosearch" class="col-sm-2 control-label">{% trans %}Estado{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control select2" id="inputEstadosearch" name="inputEstadosearch" style="width: 100%" multiple>
                        <option value=""></option>
                        {% for key, estado in config.estado_pago %}
                            <option value="{{ key }}">{{ estado }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer text-center" style="display: none">
        <button type="button" class="btn btn-primary" onclick="pago.listado()">{% trans %}Buscar{% endtrans %}</button>
    </div>
</div>