{% extends "base.html.twig" %}

{% block head %}
    <link rel="stylesheet" href="lib/AdminLTE-2.3.0/plugins/select2/select2.min.css" />
    <script type="text/javascript" src="lib/AdminLTE-2.3.0/plugins/select2/select2.min.js"></script>
    <script type="text/javascript" src="js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="js/boletin.js"></script>
{% endblock %}

{% block footer %}
    <script type="text/javascript">
        //Initialize Select2 Elements
        $(".select2").select2();
        boletin.init();
    </script>
{% endblock %}

{% block content %}
    {% set user = session_user() %}
    {% include '@ModuleManagerMailBoletin/boletin.search.html.twig' %}
    {% if user.getTipo == "admin" %}
        <div class="box-header">
            <a href="index.php?m=ManagerMail&c=Boletin&a=Add" class="btn btn-sm btn-info btn-flat pull-left">{% trans %}Nuevo boletin{% endtrans %}</a>
        </div>
    {% endif %}
    <div id="containerLoading"></div>
    <div id="containerListadoBoletin">
        {% include '@ModuleManagerMailBoletin/boletin.listado.html.twig' %}
    </div>
{% endblock %}