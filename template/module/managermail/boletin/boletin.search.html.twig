<div class="panel panel-info">
    <div class="panel-heading" style="cursor:pointer;" id="boletinSearchToogle">{% trans %}Cuadro de b√∫squeda{% endtrans %}<i class="fa fa-search pull-right">&nbsp;</i></div>
    <div class="panel-body" style="display: none">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="inputTiposearch" class="col-sm-2 control-label">{% trans %}Tipo{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control select2" id="inputTiposearch" name="inputTiposearch" style="width: 100%" multiple>
                        <option value=""></option>
                        {% for id,tipo in config.tipo_boletin %}
                            <option value="{{ id }}">{{ tipo }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                <label for="inputEstadosearch" class="col-sm-2 control-label">{% trans %}Estado{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control select2" id="inputEstadosearch" name="inputEstadosearch" style="width: 100%" multiple>
                        <option value=""></option>
                        {% for id,estado in config.estado_user %}
                            <option value="{{ id }}">{{ estado }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                <label for="inputFromSearch" class="col-sm-2 control-label">{% trans %}Origen{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control select2" id="inputFromSearch" name="inputFromSearch" style="width: 100%" multiple>
                        <option value=""></option>
                        {% for id,from in config.from_boletin %}
                            <option value="{{ id }}">{{ from }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer text-center" style="display: none">
        <button type="button" class="btn btn-primary" onclick="boletin.listado()">{% trans %}Buscar{% endtrans %}</button>
    </div>
</div>