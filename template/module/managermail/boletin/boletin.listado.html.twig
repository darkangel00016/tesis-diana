{%  set config = get_config() %}
{% if pagination.getRecords|length > 0 %}
    <div class="box">
        <div class="box-body">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>{% trans %}Tipo{% endtrans %}</th>
                    <th>{% trans %}Fecha Envio{% endtrans %}</th>
                    <th>{% trans %}Origen{% endtrans %}</th>
                    <th>{% trans %}Asunto{% endtrans %}</th>
                    <th class="text-center">{% trans %}Estado{% endtrans %}</th>
                    <th class="text-center">{% trans %}Acciones{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for boletin in pagination.getRecords %}
                    <tr>
                        <td width="20%">{{ config.tipo_boletin[boletin.tipo] }}</td>
                        <td width="20%">{% if boletin.fecha_envio == "0000-00-00" %} N/A {% else %} {{ boletin.fecha_envio }} {% endif %}</td>
                        <td width="10%">{{ config.from_boletin[boletin.from] }}</td>
                        <td width="10%">{{ boletin.subject }}</td>
                        <td width="10%">{{ config.estado_user[boletin.estado] }}</td>
                        <td align="center">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-default" onclick="boletin.launchEdit({{ boletin.id }})"><i class="fa fa-edit"></i> {% trans %}Editar{% endtrans %}</button>
                                <button type="button" class="btn btn-default" onclick="boletin.eliminar({{ boletin.id }})"><i class="fa fa-remove"></i> {% trans %}Eliminar{% endtrans %}</button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                <tr></tr>
                </tbody>
            </table>
        </div>
        {% if pagination.getRecords|length > 0 and pagination.getPaginas > 1 %}
        <div class="box-footer">
            {% include 'pagination.html.twig' with {'id': 'paginationBoletin'} %}
        </div>
        {% endif %}
    </div>
{% else %}
    <div class="alert alert-warning" role="alert">
        {% trans %}<strong>Advertencia!</strong> No hay registros disponibles.{% endtrans %}
    </div>
{% endif %}