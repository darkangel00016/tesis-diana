{% extends "base.html.twig" %}

{% block head %}
    <link rel="stylesheet" href="lib/AdminLTE-2.3.0/plugins/select2/select2.min.css" />
    <script type="text/javascript" src="lib/AdminLTE-2.3.0/plugins/select2/select2.min.js"></script>
    <script type="text/javascript" src="js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="js/estudiante.js"></script>
{% endblock %}

{% block footer %}
    <script type="text/javascript">
        //Initialize Select2 Elements
        $(".select2").select2();
        estudiante.init();
    </script>
{% endblock %}

{% block content %}
    {% set user = session_user() %}
    {% include '@ModuleManagerMailEstudiante/estudiante.search.html.twig' %}
    {% if user.getTipo == "admin" %}
        <div class="box-header">
            <a href="index.php?m=ManagerMail&c=Estudiante&a=Add" class="btn btn-sm btn-info btn-flat pull-left">Nuevo estudiante</a>
        </div>
    {% endif %}
    <div id="containerLoading"></div>
    <div id="containerListadoEstudiante">
        {% include '@ModuleManagerMailEstudiante/estudiante.listado.html.twig' %}
    </div>
{% endblock %}