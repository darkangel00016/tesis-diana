<div class="panel panel-info">
    <div class="panel-heading" style="cursor:pointer;" id="userSearchToogle">{% trans %}Cuadro de bÃºsqueda{% endtrans %}<i class="fa fa-search pull-right">&nbsp;</i></div>
    <div class="panel-body" style="display: none">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="inputNombreSearch" class="col-sm-2 control-label">{% trans %}Nombre{% endtrans %}</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputNombreSearch" name="inputNombreSearch" placeholder="{% trans %}Nombre{% endtrans %}">
                </div>
            </div>
            <div class="form-group">
                <label for="inputUsuarioSearch" class="col-sm-2 control-label">{% trans %}Usuario{% endtrans %}</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputUsuarioSearch" name="inputUsuarioSearch" placeholder="{% trans %}Usuario{% endtrans %}">
                </div>
            </div>
            <div class="form-group">
                <label for="inputTiposearch" class="col-sm-2 control-label">{% trans %}Tipo{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control select2" id="inputTiposearch" name="inputTiposearch" style="width: 100%" multiple>
                        <option value=""></option>
                        <option value="admin">{% trans %}Admin{% endtrans %}</option>
                        <option value="usuario">{% trans %}Usuario{% endtrans %}</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEstadosearch" class="col-sm-2 control-label">{% trans %}Estado{% endtrans %}</label>
                <div class="col-sm-10">
                    <select class="form-control select2" id="inputEstadosearch" name="inputEstadosearch" style="width: 100%" multiple>
                        <option value=""></option>
                        <option value="1">{% trans %}Activo{% endtrans %}</option>
                        <option value="0">{% trans %}Inactivo{% endtrans %}</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer text-center" style="display: none">
        <button type="button" class="btn btn-primary" onclick="user.listado()">{% trans %}Buscar{% endtrans %}</button>
    </div>
</div>