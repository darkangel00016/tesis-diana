{% extends "@ModuleLogin/login.base.html.twig" %}

{% block head %}
    <link rel="stylesheet" href="css/login.css">
    <script src="js/jquery.validate.min.js"></script>
    <script src="js/login.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            login.init();
        });
    </script>
{% endblock %}

{% block main %}
    <form id="formLogin" class="form-signin" data-toggle="validator">
        <h2 class="form-signin-heading">{% trans "Inicio de Sesión" %}</h2>
        <label for="inputEmail" class="sr-only">{% trans "Usuario" %}</label>
        <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="{% trans "Usuario" %}" required autofocus>
        <label for="inputPassword" class="sr-only">{% trans "Contraseña" %}</label>
        <input type="password" id="inputPassword"  name="inputPassword" class="form-control" placeholder="{% trans "Contraseña" %}" required>
        <img src="index.php?m=Login&c=Main&a=catpcha" class="img-responsive catch-login" />
        <label for="inputCode" class="sr-only">{% trans "Código" %}</label>
        <input type="password" id="inputCode" name="inputCode" class="form-control" placeholder="{% trans "Código" %}" required>
        <a href="index.php?m=Login&c=Main&a=forgot" class="forgot-password">{% trans "¿Olvidó su nombre de usuario o contraseña?" %}</a>
        <button class="btn btn-lg btn-primary btn-block" type="button" id="buttonLogin">{% trans "Ingresar" %}</button>
    </form>
{% endblock %}