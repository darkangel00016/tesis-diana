{% extends "@ModuleLogin/login.base.html.twig" %}

{% block head %}
    <link rel="stylesheet" href="css/login.css">
    <script src="js/jquery.validate.min.js"></script>
    <script src="js/forgot.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            forgot.init();
        });
    </script>
{% endblock %}

{% block main %}
    <form id="formForgot" class="form-signin" data-toggle="validator">
        <h2 class="form-signin-heading">{{ title }}</h2>
        <div id="containerLoading"></div>
        <label for="inputEmail" class="sr-only">{% trans "Usuario" %}</label>
        <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="{% trans "Usuario" %}" required autofocus>
        <img src="index.php?m=Login&c=Main&a=catpcha" class="img-responsive catch-login" />
        <label for="inputCode" class="sr-only">{% trans "Código" %}</label>
        <input type="password" id="inputCode" name="inputCode" class="form-control" placeholder="{% trans "Código" %}" required>
        <button class="btn btn-lg btn-primary btn-block" type="button" id="buttonForgot">{% trans "Generar" %}</button>
    </form>
{% endblock %}