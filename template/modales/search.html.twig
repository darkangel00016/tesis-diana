<div class="modal fade" tabindex="-1" role="dialog" id="modalSearch">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal" id="containerFormSearch">
                    <div class="form-group">
                        <label for="inputCampos" class="col-sm-2 control-label">{% trans %}Campo{% endtrans %}</label>
                        <div class="col-sm-4">
                            <select class="form-control select2" id="inputCampos" name="inputCampos" style="width: 100%"></select>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <input type="text" class="form-control" id="inputSearch" name="inputCliente" placeholder="{% trans %}Valor del campo a buscar{% endtrans %}" />
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" id="buttonSearch"><i class="glyphicon glyphicon-search"></i></button>
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
                <div id="containerLoadingSearch" style="text-align: center;"></div>
                <div id="containerListadoSearch"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->